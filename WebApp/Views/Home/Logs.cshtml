@model WebApp.Models.LogModel

@{
	ViewBag.Title = "Logs";
}

<h2>Logs</h2>


<div>
    <table class="table">
        <tr>
            <th>Type</th>
            <th>Message</th>
        </tr>
        @foreach (var log in Model.LogMessages)
            {
                <tr>
                    <td>@Html.DisplayFor(model => log.Type)</td>
                    <td>@Html.DisplayFor(model => log.Message)</td>
                </tr>
            }
        
    </table>

    <table>
        <tr>
            <td>filter:  </td>
            <td><input type="text" id="logType" size="8" /></td>
        </tr>
    </table>
    <input type="button" id="btnFilter" style="margin:10px" value ="filter" />
</div>

<script>

    $("#btnFilter").click(function () {
        alert("in func");
        @Model.LogMessages.RemoveAll(log => (log.Type.CompareTo("#logType") != 0));
    });
</script>
  

 