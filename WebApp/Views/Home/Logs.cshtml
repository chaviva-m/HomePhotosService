@model WebApp.Models.LogModel

@{
    ViewBag.Title = "Logs";
}

<h2>Logs</h2>


<div id="myDiv">
    <table class="table">
        <tr>
            <th>Type</th>
            <th>Message</th>
        </tr>
        @{var logs = Model.LogMessages; }
        @foreach (var log in logs)
        {
                <tr>
                    <td>@Html.DisplayFor(model => log.Type)</td>
                    <td>@Html.DisplayFor(model => log.Message)</td>
                </tr>
        }
        
    </table>

    <table>
        <tr>
            <td>filter:  </td>
            <td><input type="text" runat="server" id="logType" size="8" /></td>
        </tr>
    </table>
    <button type="button" id="btnFilter" style="margin:10px" onclick="onFilter()">filter</button>
    <script type="text/javascript">
        function onFilter() {
         var st = $("#logType");
        @Model.LogMessages.RemoveAll(log => (!String.Equals(log.Type, st, StringComparison.OrdinalIgnoreCase)));
        }
    </script>
</div>
 